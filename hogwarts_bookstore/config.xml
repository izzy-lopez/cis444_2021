<?xml version='1.0' encoding='utf-8'?>
<widget id="com.izzy.bookstore" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Hogwarts Bookstore</name>
    <description>
        "And then, of course, there was the sheer size of the library; tens of 
        thousands of books; thousands of shelves; hundreds of narrow rows."
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Izzy Lopez
    </author>
    <content src="index.html" />
    <access origin="http://*" />
    <allow-navigation href="http://*" />
    <allow-intent href="http://*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
